{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header">
    <nav class="main-nav overlay clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
        <a class="subscribe-button icon-feed" href="{{@blog.url}}/rss/">Subscribe</a>
    </nav>
    <div class="main-header-content">
        <h1 class="page-title" {{#if @blog.cover}}style="background-image: url({{@blog.cover}});"{{/if}}>{{@blog.title}}</h1>
        <h2 class="page-description" {{#if @blog.cover}}style="background-image: url({{@blog.cover}});"{{/if}}>{{@blog.description}}</h2>
    </div>
    <div class="img-stripe" {{#if @blog.cover}}style="background-image: url({{@blog.cover}});"{{/if}}></div>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content home-content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>